[Unit]
Description=Kalite server

[Service]
User=ideascube
Group=ideascube
ExecStart=/home/ideascube/.kalite/env/bin/python2 /home/ideascube/.kalite/env/bin/kalite start --foreground
ExecStop=/home/ideascube/.kalite/env/bin/python2 /home/ideascube/.kalite/env/bin/kalite stop
Restart=always
TimeoutStopSec=60
PIDFile=/var/run/kalite.pid
KillSignal=SIGINT
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
