import subprocess

def allow_host(ipaddress):

    cmd = "sudo iptables -t nat -I CAPTIVE_PASSLIST 1 -s {ip} -j ACCEPT".format(ip=ipaddress)
    subprocess.check_output(cmd, shell=True)
	

