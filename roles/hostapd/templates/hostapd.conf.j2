# interface name
interface={{hotspot_interface}}
# wlan card driver
driver=nl80211
# wifi ssid
ssid={{idc_uniq_device_name}}
# wifi mode
hw_mode=g
# wifi channel
channel=1
# MAC address access control (0 = accept by default)
macaddr_acl=0
# limit wifi conexion
max_num_sta=15
# dunno lol
auth_algs=1
# dont hide the SSID
ignore_broadcast_ssid=0
{% if wpa_pass is defined %}
# wpa version
wpa=2
# wpa passwd
wpa_passphrase={{ wpa_pass }}
# wpa encryption
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
