server {
    listen   80;
    server_name api.{{ mook_name }}.{{ hostname }};
    root {{ mook_path }}/{{ mook_name }}/api;
    proxy_read_timeout 600s;

    location /static/ {
        alias {{ mook_path }}/{{ mook_name }}/static/;
        expires 30d;
    }
    location / {
        include uwsgi_params;
        uwsgi_pass unix:/tmp/{{ mook_name }}-api.sock;
    }
}
