[global]
workgroup = WORKGROUP
server string = Samba Server %v
netbios name = {{netbios_name.stdout | default(omit)}}
security = user
map to guest = bad user
dns proxy = no
wins support = yes
socket options = TCP_NODELAY

#============================ Share Definitions ==============================

[storage]
path = "{{ samba_dir }}"
browsable =yes
writable = yes
guest ok = yes
read only = no
force user = ideascube
force group = ideascube
create mask = 664
force create mode = 664
directory mask = 2775
force directory mode = 2775
